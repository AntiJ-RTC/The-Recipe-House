@model The_Recipe_House.Models.Comments

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Comment</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control" rows="4" style="background: #fff;"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Recipe</label>
                <select asp-for="RecipeId" class="form-control" asp-items="ViewBag.RecipeId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">User</label>
                <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="recipe" asp-action="Details" asp-route-id="@Model.RecipeId" asp-route-title="@Model.Recipe.Title" class="btn btn-outline-primary">Go Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
